# introducing Variables.
a = 56
b = 10

# part(a)- finding a&b.
print("the value of a&b is",a&b)

# part(b)- finding a|b.
print("the value of a|b is",a|b)

# part(c)- finding a^b.
print(" the value of a^b is",a^b)

# part(d)- left shifting a and b with 2 bits.
print("a<<2 =",a<<2,"b<<2 =",b<<2)

# part(e)- right shifting a with 2 bits and b with 4 bits.
print("a>>2 =",a>>2,"b>>4 =",b>>4)
